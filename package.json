{
  "name": "backend-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node build/index.js",
    "start_dev": "node ./src/index.js",
    "server": "nodemon ./src/index.js",
    "clean": "rm -rf build",
    "build": "npm run-script clean && npx babel src --out-dir build --copy-files --source-maps",
    "build_start": "npm run-script build && npm run-script start",
    "test": "mocha --timeout 10000 --exit",
    "lint": "./node_modules/.bin/eslint src/**/*.js test/**/*.js --fix",
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint",
      "git add ."
    ]
  },
  "keywords": [],
  "author": "",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import",
      "@babel/plugin-syntax-import-meta",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-json-strings",
      "@babel/plugin-proposal-optional-chaining"
    ]
  },
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@sendgrid/mail": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "ddos": "^0.2.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-server-logs": "^1.0.4",
    "express-validation": "^3.0.2",
    "helmet": "^3.22.0",
    "http-status": "^1.4.2",
    "jwt-simple": "^0.5.6",
    "luxon": "^1.24.1",
    "mongoose": "^5.9.12",
    "node-schedule": "^1.3.2",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-json-strings": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/plugin-syntax-import-meta": "^7.7.4",
    "@babel/preset-env": "^7.7.7",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.6",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.5"
  }
}
